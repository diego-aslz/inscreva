.page-header
  %h1= t :'devise.titles.sign_in'

= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
  html: { class: 'form-horizontal' }, wrapper: :horizontal) do |f|
  .form-inputs
    = f.input :email, :required => false, :autofocus => true
    = f.input :password, :required => false
    = f.input :remember_me, :as => :boolean if devise_mapping.rememberable?

  .form-actions.row
    .col-sm-9.col-sm-offset-3
      = f.button :submit, t(:'devise.buttons.sign_in'), class: 'btn-primary'

= render "devise/shared/links"
