!!!
%html{lang: "pt-BR", :'ng-app' => 'Inscreva'}
  %head
    %meta{charset: "utf-8"}
    %meta{:'http-equiv' => "X-UA-Compatible", content: "IE=Edge,chrome=1"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : "Inscreva"
    = csrf_meta_tags

    -# Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js" type="text/javascript"></script>

    = stylesheet_link_tag "application", :media => "all"
    -# Size should be 32 x 32 pixels
    =# favicon_link_tag 'favicon.ico', :rel => 'shortcut icon'
  %body
    .wrapper
      .navbar.navbar-fixed-top
        .navbar-inner
          .container
            %a.btn.btn-navbar{:'data-target' => ".nav-collapse", :'data-toggle' => "collapse"}
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.brand{href: root_url} Inscreva
            .container.nav-collapse
              %ul.nav
                - if can? :mine, Subscription
                  %li= link_to t(:'subscriptions.mine.title'), mine_subscriptions_path
                - if can? :index, Event
                  %li= link_to Event.model_name.human.pluralize, events_path
                - if can? :index, User
                  %li= link_to User.model_name.human.pluralize, users_path
                - if can? :index, Role
                  %li= link_to Role.model_name.human.pluralize, roles_path
              .pull-right
                - if user_signed_in?
                  .btn-group
                    %a.btn.dropdown-toggle{:'data-toggle' => :dropdown, href: :'#'}
                      = current_user.name || current_user.email
                      %span.caret
                    %ul.dropdown-menu
                      %li
                        %a{href: edit_registration_path}
                          = t :'devise.links.edit'
                      %li.divider
                      %li
                        %a{href: destroy_user_session_url, :'data-method' => "delete"}
                          = t :'devise.links.sign_out'
                - else
                  = link_to t('devise.links.sign_in'), new_user_session_url, class: 'btn btn-primary'
                .btn-group
                  %a.btn.dropdown-toggle{:'data-toggle' => :dropdown, href: :'#'}
                    = image_tag "#{locale}.png", alt: locale, width: "16", height: "16"
                    %span.caret
                  %ul.dropdown-menu
                    - (I18n.available_locales - [locale]).each do |loc|
                      %li
                        %a{href: locale_path(loc)}
                          = locale_flag loc
      .container
        .row
          .span12
            - flash.each do |k,v|
              %div{class: "alert alert-#{k == :notice ? 'success' : 'error'}"}
                %button.close{type: "button", :'data-dismiss' => "alert"} &times;
                = v
            = yield
    .footer
      .container
        %p Inscreva
        %p Vers√£o 1.13
        %p
          Criado por
          %a{href: "http://www.linkedin.com/pub/diego-aguir-selzlein/23/259/40", target: "_blank"}
            Diego Aguir Selzlein
          &copy; Unila 2013

    -# Javascripts
    -# Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"
