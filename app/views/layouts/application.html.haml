!!!
%html{lang: "pt-BR", :'ng-app' => true}
  %head
    %meta{charset: "utf-8"}
    %meta{:'http-equiv' => "X-UA-Compatible", content: "IE=Edge,chrome=1"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : "Inscreva"
    = csrf_meta_tags

    -# Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js" type="text/javascript"></script>

    = stylesheet_link_tag "application", :media => "all"
    -# Size should be 32 x 32 pixels
    =# favicon_link_tag 'favicon.ico', :rel => 'shortcut icon'
  %body
    .wrapper
      .navbar.navbar-fixed-top
        .navbar-inner
          .container
            %a.btn.btn-navbar{:'data-target' => ".nav-collapse", :'data-toggle' => "collapse"}
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.brand{href: root_url} Inscreva
            .container.nav-collapse
              %ul.nav
                %li= link_to t(:'subscriptions.mine.title'), mine_subscriptions_path if can? :mine, Subscription
                %li= link_to Event.model_name.human.pluralize, events_path if can? :index, Event
                %li= link_to User.model_name.human.pluralize, users_path if can? :index, User
              - if user_signed_in?
                .pull-right
                  = link_to current_user.name || current_user.email, edit_registration_path
                  ,
                  %a{href: destroy_user_session_url, :'data-method' => "delete"} Sair
              - else
                .pull-right
                  = link_to t('devise.links.sign_in'), new_user_session_url, :class => 'btn btn-primary'
      .container
        .row
          .span12
            - flash.each do |k,v|
              %div{class: "alert alert-#{k == :notice ? 'success' : 'error'}"}
                %button.close{type: "button", :'data-dismiss' => "alert"} &times;
                = v
            = yield
    .footer
      .container
        %p Inscreva
        %p Vers√£o 0.01
        %p
          Criado por
          %a{href: "http://www.linkedin.com/pub/diego-aguir-selzlein/23/259/40", target: "_blank"}
            Diego Aguir Selzlein

    -# Javascripts
    -# Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"
