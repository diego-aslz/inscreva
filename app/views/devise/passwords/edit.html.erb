<div class="page-header">
  <h1>
    <%= t 'devise.titles.change' %>
  </h1>
</div>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name),
  html: { method: :put, class: 'form-horizontal' }, wrapper: :horizontal) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password, required: true, autofocus: true %>
    <%= f.input :password_confirmation, required: true %>
  </div>

  <div class="form-actions row">
    <div class="col-sm-9 col-sm-offset-3">
      <%= f.button :submit, t(:'devise.buttons.change'), class: 'btn-primary' %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
