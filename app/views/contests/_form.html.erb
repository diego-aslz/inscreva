<%= simple_form_for @contest, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :begin_at %>
  <%= f.input :end_at %>
  <%= f.input :allow_edit %>
  <%= f.input :rules_url %>
  <%= f.input :technical_email %>
  <%= f.input :email %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                contests_path, :class => 'btn' %>
  </div>
<% end %>
