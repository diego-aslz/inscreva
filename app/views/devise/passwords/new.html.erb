<h2><%= t 'devise.titles.forgot' %></h2>

<%= semantic_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= f.semantic_errors %>

  <%= f.inputs do %>
    <%= f.input :email, :required => true, :autofocus => true %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, label: t('devise.buttons.forgot'), button_html: { class: 'btn btn-primary' } %>
  <% end %>
<% end %>

<%= render "devise/shared/links" %>
