= simple_form_for([@event, @notification], html: { class: 'form-horizontal' },
  wrapper: :horizontal) do |f|
  .form-inputs
    = f.input :subject
    = f.input :respond, as: :email
    = hide_params(@notification.filters, prefix: 'notification[filters]') if @notification.filters
    = f.input :recipients_text, as: :text
    = f.input :recipients_count, label: '&nbsp;'.html_safe do
      %strong= t :total, count: @notification.recipients.size
    = f.input :message

  .form-actions.row
    %div.col-sm-9.col-sm-offset-3
      = f.button :submit, class: 'btn-primary'
