= simple_form_for(@user, :html => { class: 'form-horizontal' },
  wrapper: :horizontal) do |f|

  .form-inputs
    = f.input :name
    = f.input :admin
    = f.input :can_create_events
    = f.input :email, required: true
    = f.input :password, required: @user.new_record?
    = f.input :password_confirmation, required: @user.new_record?

  .form-actions.row
    .col-sm-9.col-sm-offset-3
      = f.button :submit, class: 'btn-primary'
      = link_to_back path: users_path
