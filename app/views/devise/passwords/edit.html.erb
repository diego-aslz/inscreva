<h2><%= t 'devise.titles.change' %></h2>

<%= semantic_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.semantic_errors %>

  <%= f.input :reset_password_token, :as => :hidden %>
  <%= f.full_error :reset_password_token %>

  <%= f.inputs do %>
    <%= f.input :password, :label => "New password", :required => true, :autofocus => true %>
    <%= f.input :password_confirmation, :label => "Confirm your new password", :required => true %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, label: t('devise.buttons.change'), button_html: { class: 'btn btn-primary' } %>
  <% end %>
<% end %>

<%= render "devise/shared/links" %>
