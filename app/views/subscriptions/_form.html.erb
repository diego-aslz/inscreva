<%= semantic_form_for @subscription, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.semantic_errors %>
  <%= f.inputs do %>
    <%= f.input :event_id, as: :hidden %>
    <%= content_tag :div, id: 'id_card_field' do %>
      <%= f.input :id_card, append: link_to_check_id_card.html_safe %>
    <% end %>

    <%= content_tag :div, id: 'subscription_fields' do %>
      <%= f.input :id_card, input_html: { readonly: :readonly, id: 'id_card_show' } %>
      <%= f.input :email %>
    <% end %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit %>
  <% end %>
<% end %>
