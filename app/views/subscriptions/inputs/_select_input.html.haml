.form-group
  = label_tag id, field.name, class: :'control-label col-sm-3'
  .col-sm-9
    - field.select_options.each do |opt|
      - cb_id = "#{id}_#{opt[1]}"
      %label.checkbox.inline
        = check_box_tag cb_id, opt[1], value.try(:include?, opt[1]), name: "fields[#{field.id}][value][]"
        = opt[0]
