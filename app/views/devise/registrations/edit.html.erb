<h2><%= t('helpers.titles.edit', model: t('activerecord.models.user')) %></h2>

<%= semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.semantic_errors %>

  <%= f.inputs do %>
    <%= f.input :email, :required => true, :autofocus => true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, :autocomplete => "off", :required => false %>
    <%= f.input :password_confirmation, :required => false %>
    <%= f.input :current_password, :required => true %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, label: t('devise.buttons.update'), button_html: { class: 'btn btn-large btn-primary' } %>
    <%= link_to t(:cancel), :back, class: 'btn' %>
  <% end %>
<% end %>
