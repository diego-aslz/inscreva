.page-header
  %h1= t :'devise.titles.forgot'

= simple_form_for(resource, as: resource_name, url: password_path(resource_name),
  html: { method: :post, class: 'form-horizontal' }, wrapper: :horizontal) do |f|
  = f.error_notification

  .form-inputs
    = f.input :email, :required => true, :autofocus => true

  .form-actions.row
    .col-sm-9.col-sm-offset-3
      = f.button :submit, t(:'devise.buttons.forgot'), class: 'btn-primary'

= render "devise/shared/links"
